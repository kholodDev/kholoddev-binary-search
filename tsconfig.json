{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "lib",
        "declarationDir": "lib",
        "declaration": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": ["src/*.ts"],
    "exclude": ["**/*.test.ts"],
}